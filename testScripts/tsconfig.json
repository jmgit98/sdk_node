{
    "version": "2.4.2",
    "compilerOptions": {
        "lib": [ // es2015.collection excluded because it defines WeakMap and WeakSet
          "es5",
          "es2015.core",
          "es2015.generator",
          "es2015.iterable",
          "es2015.promise",
          "es2015.proxy",
          "es2015.reflect",
          "es2015.symbol",
          "es2015.symbol.wellknown",
          "es2016.array.include",
          "es2017.object",
          "es2017.intl",
          "es2017.sharedmemory",
          "es2017.string",
          "es2017.typedarrays"
        ],
        "target": "es6",
        "module": "es2020",
        "moduleResolution": "node",
        "emitDecoratorMetadata": false,
        "experimentalDecorators": false,
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "outDir": "./lib",
        "typeRoots": ["./src"]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
