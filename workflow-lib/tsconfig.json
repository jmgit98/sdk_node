{
    "version": "2.4.2",
    "compilerOptions": {
        "lib": ["es2017"],
        "target": "es2017",
        "module": "es2020",
        "moduleResolution": "node",
        "emitDecoratorMetadata": false,
        "experimentalDecorators": false,
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "incremental": true,
        "composite": true
    },
    "include": [
        "./src/**/*.ts"
    ]
}
